generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cities {
  Id Int @id @default(autoincrement())
  Name String
  Lat Float
  Long Float
  Forecasts Forecasts[]  

  @@index([Name, Lat, Long])
}

model WeatherConditions {
  Id Int @id @default(autoincrement())
  Name String
  Forecasts Forecasts[]

  @@index([Name])
}
model Forecasts {
  Id Int @id @default(autoincrement())
  Day DateTime
  Hour Int
  City Cities @relation(fields: [CityId], references: [Id])
  CityId Int 
  Temp Float
  Feels_like Float
  Cloudness Float
  Condition WeatherConditions @relation(fields: [ConditionId], references: [Id])
  ConditionId Int 
  Daytime String
  Prec_strength Float
}